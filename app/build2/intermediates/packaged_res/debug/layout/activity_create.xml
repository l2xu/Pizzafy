<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/text_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/back"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_groundSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/rock_salt"
        android:text="@string/ground_category"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/text_back"
        app:layout_constraintTop_toBottomOf="@+id/text_back" />

    <RadioGroup
        android:id="@+id/radioGroup_ground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_back"
        app:layout_constraintTop_toBottomOf="@+id/text_groundSelect">

        <RadioButton
            android:id="@+id/radio_ground_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"
            android:singleLine="false"
            android:text="@string/ground_normal"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange"
            app:useMaterialThemeColors="true" />

        <RadioButton
            android:id="@+id/radio_ground_thin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"
            android:text="@string/ground_thin"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />

        <RadioButton
            android:id="@+id/radio_ground_thick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"
            android:text="@string/ground_thick"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />

        <RadioButton
            android:id="@+id/radio_ground_crusty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"
            android:text="@string/ground_crusty"

            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />

    </RadioGroup>

    <TextView
        android:id="@+id/text_sauceSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/rock_salt"
        android:text="@string/sauce_category"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/text_back"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_ground" />


    <RadioGroup
        android:id="@+id/radioGroup_sauce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup_ground"
        app:layout_constraintStart_toStartOf="@+id/text_back"
        app:layout_constraintTop_toBottomOf="@+id/text_sauceSelect">

        <RadioButton
            android:id="@+id/radio_sauce_tomatoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"

            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"
            android:text="@string/sauce_tomatoes"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />

        <RadioButton
            android:id="@+id/radio_sauce_hollandaise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"
            android:text="@string/sauce_hollandaise"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />

        <RadioButton
            android:id="@+id/radio_sauce_herb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"
            android:text="@string/sauce_herb"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />

        <RadioButton
            android:id="@+id/radio_sauce_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"
            android:text="@string/sauce_none"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />
    </RadioGroup>

    <TableLayout
        android:id="@+id/tableLayout_toppings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup_ground"
        app:layout_constraintStart_toStartOf="@+id/text_back"
        app:layout_constraintTop_toBottomOf="@+id/text_toppingsSelect">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <ToggleButton
                android:id="@+id/toggle_toppings_pineapple"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"

                android:layout_marginEnd="@dimen/margin_right"

                android:background="@drawable/toggle_pineapple"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/toggle_toppings_mushrooms"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"

                android:layout_marginEnd="@dimen/margin_right"

                android:background="@drawable/toggle_mushrooms"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/toggle_toppings_broccoli"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_marginEnd="@dimen/margin_right"


                android:background="@drawable/toggle_broccoli"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/toggle_toppings_tomatoes"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"

                android:layout_marginEnd="@dimen/margin_right"

                android:background="@drawable/toggle_tomatoes"
                android:textOff=""
                android:textOn="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ToggleButton
                android:id="@+id/toggle_toppings_tuna"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_marginEnd="@dimen/margin_right"


                android:background="@drawable/toggle_tuna"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/toggle_toppings_onions"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"

                android:layout_marginEnd="@dimen/margin_right"
                android:background="@drawable/toggle_onion"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/toggle_toppings_garlic"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"

                android:layout_marginEnd="@dimen/margin_right"
                android:background="@drawable/toggle_garlic"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/toggle_toppings_salami"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_marginEnd="@dimen/margin_right"

                android:background="@drawable/toggle_salami"
                android:textOff=""
                android:textOn="" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/text_toppingsSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/rock_salt"
        android:text="@string/toppings_category"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/text_back"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_sauce" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/rock_salt"
        android:text="@string/cheese_category"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/text_back"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout_toppings" />

    <RadioGroup
        android:id="@+id/radioGroup_cheese"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup_ground"
        app:layout_constraintStart_toStartOf="@+id/text_back"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/radio_cheese_gouda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"

            android:text="@string/cheese_gouda"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />


        <RadioButton
            android:id="@+id/radio_cheese_mozzarella"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"
            android:text="@string/cheese_mozzarella"
            android:textAlignment="center"

            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />

        <RadioButton
            android:id="@+id/radio_cheese_vegan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"

            android:text="@string/cheese_vegan"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />

        <RadioButton
            android:id="@+id/radio_cheese_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"

            android:text="@string/cheese_none"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />
    </RadioGroup>

    <TextView
        android:id="@+id/text_sizeSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/rock_salt"
        android:text="@string/size_category"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/text_groundSelect"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_cheese" />

    <RadioGroup
        android:id="@+id/radioGroup_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup_ground"
        app:layout_constraintStart_toStartOf="@+id/text_back"
        app:layout_constraintTop_toBottomOf="@+id/text_sizeSelect">

        <RadioButton
            android:id="@+id/radio_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"
            android:text="@string/size_16"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />

        <RadioButton
            android:id="@+id/radio_size_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"

            android:text="@string/size_24"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />

        <RadioButton
            android:id="@+id/radio_size_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:buttonTint="@color/mainOrange"
            android:text="@string/size_40"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_color"
            android:textColorHighlight="@color/mainOrange" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:textSize="10sp"
        app:iconPadding="4sp"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup_ground"
        app:layout_constraintTop_toTopOf="@+id/text_back" />

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_now"
        app:layout_constraintBottom_toBottomOf="@+id/text_calInfo"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup_ground" />

    <TextView
        android:id="@+id/text_priceTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="sans-serif-black"
        android:text="100$"
        android:textColor="@color/mainOrange"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_priceInfo"
        app:layout_constraintStart_toEndOf="@+id/text_priceInfo" />

    <TextView
        android:id="@+id/text_priceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/rock_salt"
        android:text="Price:"
        app:layout_constraintBottom_toTopOf="@+id/text_calInfo"
        app:layout_constraintStart_toStartOf="@+id/text_back" />

    <TextView
        android:id="@+id/text_calInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/rock_salt"
        android:text="Cal:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_back" />

    <TextView
        android:id="@+id/text_calTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="320cal"
        android:textColor="@color/mainOrange"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_calInfo"
        app:layout_constraintStart_toStartOf="@+id/text_priceTotal" />

</androidx.constraintlayout.widget.ConstraintLayout>